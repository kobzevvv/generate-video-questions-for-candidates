# Server
PORT=3000
HOST=localhost

# OpenAI - for TTS and question generation
OPENAI_API_KEY=sk-your-openai-api-key

# fal.ai - for lip-sync (https://fal.ai) - uses Sync Labs lipsync-2 model
# Get API key from https://fal.ai/dashboard/keys
FAL_API_KEY=your-fal-api-key

# Sync Labs - deprecated, use FAL_API_KEY instead
SYNCLABS_API_KEY=your-synclabs-api-key

# File storage paths (relative to project root)
UPLOADS_DIR=data/uploads
OUTPUTS_DIR=data/outputs
JOBS_DIR=data/jobs

# Worker settings
WORKER_POLL_INTERVAL_MS=2000

# Public URL for Sync Labs to access local files
# Use ngrok: ngrok http 3000, then set the URL here
# Example: PUBLIC_BASE_URL=https://abc123.ngrok-free.app
PUBLIC_BASE_URL=

# Lip-sync settings
LIPSYNC_ENABLED=true
LIPSYNC_POLL_INTERVAL_MS=5000
LIPSYNC_TIMEOUT_MS=600000
